<h1 class="center">Users of the T!ckles website</h1>

<div class = "center">
	
	<%= will_paginate %>
	
	<% @users.each do |user| %>
	
		<ul class = "listing">
			<div class = "row">
				<div class = "well col-md-4 col-md-offset-4">
					<li>
						<%= link_to gravatar_for(user), user_path(user) %>
					</li>
					<li class = "article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li>
						<small>
							<%= pluralize(user.articles.count, "article") if user.articles %>
						</small>
					</li>
					<li>
						<% if logged_in? and current_user.admin? %>
							<%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Delete user and all associated articles?"} %>
						<% end %>
					</li>
				</div>
			</div>
		</ul>
			
	<% end %>
	<%= will_paginate %>
</div>
